# /home/<YOUR_USER>/syhub/templates/dnsmasq.conf.j2
    # Configuration for DNS and DHCP service for AP clients
    # Generated by syhub.sh from template
    
    # Listen only on the specified AP interface and localhost
    interface=__WIFI_AP_INTERFACE__
    listen-address=::1,127.0.0.1,__WIFI_AP_IP__
    
    # Bind to interfaces (prevents dnsmasq starting before interface is ready)
    bind-interfaces
    
    # Set domain for AP clients
    domain=__HOSTNAME__
    
    # Provide DHCP on the AP interface
    # Format: start_ip, end_ip, subnet_mask, lease_time
    dhcp-range=__WIFI_AP_DHCP_RANGE_START__,__WIFI_AP_DHCP_RANGE_END__,__WIFI_AP_SUBNET_MASK__,__WIFI_AP_DHCP_LEASE_TIME__
    
    # Provide the AP's IP as the router (gateway) for clients
    dhcp-option=option:router,__WIFI_AP_IP__
    
    # Provide the AP's IP as the DNS server for clients
    dhcp-option=option:dns-server,__WIFI_AP_IP__
    
    # Respond to DNS queries for the hostname with the AP's IP
    # This ensures <hostname> resolves correctly for connected clients
    address=/__HOSTNAME__/__WIFI_AP_IP__/
    
    # Max DHCP leases (optional)
    # dhcp-lease-max=50
    
    # Logging (optional, uncomment for debugging)
    # log-queries
    # log-dhcp