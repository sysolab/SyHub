# /home/<YOUR_USER>/syhub/templates/hostapd.conf.j2
    # Configuration for the WiFi Access Point service
    # Generated by syhub.sh from template
    
    ctrl_interface=/var/run/hostapd
    ctrl_interface_group=0
    
    # Network Interface and Driver
    interface=__WIFI_AP_INTERFACE__
    driver=nl80211
    
    # Basic Wireless Settings
    ssid=__WIFI_AP_SSID__
    hw_mode=g          # 802.11g common for Pi 3B compatibility
    channel=7          # Static channel (avoid auto which can be unstable)
    country_code=GB    # <<--- IMPORTANT: Set to your 2-letter country code for regulatory compliance
    
    # Performance and Compatibility
    ieee80211n=1       # Enable 802.11n features
    wmm_enabled=1      # Enable Wi-Fi Multimedia (required for 802.11n)
    # ht_capab=[HT40+][SHORT-GI-20][DSSS_CCK-40] # Optional: uncomment for potential speed boost, might reduce compatibility
    
    # Security Settings (WPA2-PSK)
    macaddr_acl=0      # No MAC address filtering
    auth_algs=1        # WPA authentication
    ignore_broadcast_ssid=0 # Do not hide the SSID
    wpa=2              # Enable WPA2 (stronger than WPA)
    wpa_passphrase=__WIFI_AP_PASSWORD__
    wpa_key_mgmt=WPA-PSK
    # wpa_pairwise=TKIP CCMP # TKIP is deprecated, use CCMP only for better security
    rsn_pairwise=CCMP  # RSN = WPA2; Pairwise = AES/CCMP is required